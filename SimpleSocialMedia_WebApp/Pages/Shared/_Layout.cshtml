        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark p-3 shadow-sm">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-page="Main">SimpleSocialMedia</a>
                <!-- Hamburger -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Collapsing Menu -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-page="Main">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-page="Chat">Chat</a>
                        </li>
